<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/fragment_timeline_collapsing_layout"
                style="?attr/collapsingToolbarLayoutLargeStyle"
                android:layout_width="match_parent"
                android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
                app:collapsedTitleTextAppearance="@style/ThemeOverlay.App.NonCollapsingToolbarText"
                app:expandedTitleMarginStart="104dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.App.TitleLarge"
                app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_avatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_account_circle_placeholder_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularCrop" />

                        <TextView
                            android:id="@+id/profile_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/gs_text_regular"
                            tools:text="\@username"
                            app:layout_constraintStart_toEndOf="@id/profile_avatar"
                            app:layout_constraintTop_toTopOf="@id/profile_avatar" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/activity_profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:elevation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_back_dynamictint_24"
                    tools:title="User">

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_height="wrap_content"
            style="?attr/materialCardViewFilledStyle"
            app:contentPaddingTop="16dp"
            android:id="@+id/profile_card"
            app:contentPaddingBottom="16dp"
            app:contentPaddingRight="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/gs_text_regular"
                    android:paddingStart="16dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Sample bio. I can't remember &quot;lorem ipsum sit dolor amet&quot; past like the first few words, so this will have to suffice."/>

                <!-- 12dp to account for icon default padding -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bio_text"
                    android:paddingStart="12dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/profile_details">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profile_location_container">

                        <ImageView
                            android:src="@drawable/ic_location_24"
                            android:id="@+id/profile_location_icon"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            style="@style/Theme.Card.ProfileDetailItemIcon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:maxWidth="165dp"
                            android:fontFamily="@font/gs_text_regular"
                            android:id="@+id/profile_location_text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp"
                            tools:text="Kansas City, MO and stuff you know" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_url_container"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_link_24"
                            android:id="@+id/profile_link_icon"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            style="@style/Theme.Card.ProfileDetailItemIcon"/>

                        <TextView
                            android:id="@+id/profile_url_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:clickable="true"
                            android:textColor="?attr/colorPrimary"
                            android:foreground="?attr/selectableItemBackground"
                            android:ellipsize="end"
                            android:fontFamily="@font/gs_text_regular"
                            android:maxLines="1"
                            tools:ignore="TouchTargetSizeCheck"
                            tools:text="example.com" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_details"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/following_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_regular"
                        android:text="217"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_regular"
                        android:id="@+id/following_label"
                        android:layout_marginStart="4dp"
                        android:text="@string/activity_profile_following_label"/>

                    <TextView
                        android:id="@+id/follower_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ps_regular"
                        android:text="61.2K"/>

                    <TextView
                        android:id="@+id/followers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_regular"
                        android:layout_marginStart="4dp"
                        android:text="@string/activity_profile_followers_label" />

                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>